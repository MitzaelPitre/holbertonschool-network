#!/usr/bin/env bash
# This script modifies the /etc/hosts file to set localhost and facebook.com to specific IP addresses.

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Remove any existing lines that contain 'localhost' or 'facebook.com'
sudo sed -i '/127.0.0.1 localhost/d' /etc/hosts
sudo sed -i '/8.8.8.8 facebook.com/d' /etc/hosts
sudo sed -i '/157.240.11.35 facebook.com/d' /etc/hosts

# Add new lines for localhost and facebook.com
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
